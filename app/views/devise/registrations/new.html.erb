<h2>Sign up</h2>

<%= puts resource_name %>
  <%= print resource %>


 <% resource.build_customer %>
  <%= form_for(resource, :as => resource_name,
                         :url => registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>

    <%= f.text_field :role, :hidden => true, :value => 'customer' %>

    <h2><%= f.label :email %></h2>
    <p><%= f.text_field :email %></p>

    <h2><%= f.label :password %></h2>
    <p><%= f.password_field :password %></p>

    <h2><%= f.label :password_confirmation %></h2>
    <p><%= f.password_field :password_confirmation %></p>

    <%= f.fields_for :customer do |customer_form| %>
     <h2><%= customer_form.label :email %></h2>
      <p><%= customer_form.text_field :email %></p>


      <h2><%= customer_form.label :first_name %></h2>
      <p><%= customer_form.text_field :first_name %></p>

      <h2><%= customer_form.label :last_name %></h2>
      <p><%= customer_form.text_field :last_name %></p>

     <h2><%= customer_form.label :adress1 %></h2>
      <p><%= customer_form.text_field :address1 %></p>

     <h2><%= customer_form.label :address2 %></h2>
      <p><%= customer_form.text_field :address2 %></p>

     <h2><%= customer_form.label :province %></h2>
      <p><%= customer_form.text_field :province %></p>

     <h2><%= customer_form.label :countryname %></h2>
      <p><%= customer_form.text_field :countryname %></p>

     <h2><%= customer_form.label :postalcode %></h2>
      <p><%= customer_form.text_field :postalcode %></p>

     <h2><%= customer_form.label :phone %></h2>
      <p><%= customer_form.text_field :phone %></p>

    <% end %>

    <p><%= f.submit "Sign up" %></p>

    <br/>
    <%= render :partial => "devise/shared/links" %>
  <% end %>

